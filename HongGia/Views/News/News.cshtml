@model HongGia.Core.Interfaces.Base.INews

@{
    ViewBag.Title = "News Page";
}

@if(Model != null)
{
    <div class="row row-margin">
        <div class="col-md-12 text-center">
            <h3>@Model.Header</h3>
        </div>
    </div>

    if (Model.Image != null)
    {
        <div class="row row-margin">
            <div class="col-md-12 text-center">
                <img src="@Model.Image.Src" alt="@Model.Image.Alt" />
            </div>
        </div>
    }

    <div class="row row-margin">
        <div class="col-md-12 text-justify">
            <p>@Model.Text</p>

            <i class="right" style="float:right; margin-top: 10px">@Model.Date.ToString("d")</i>
        </div>
    </div>
}