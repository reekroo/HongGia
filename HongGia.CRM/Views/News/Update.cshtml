@model HongGia.Core.Interfaces.Models.INewsView

@{
	ViewBag.Title = "UpdateNews";
}

<h2>Update News</h2>

<div>
	@using (Html.BeginForm("Update", "News", FormMethod.Post))
	{
		<div class="form-group">
			<label for="Header">Header</label>
			<input type="text" class="form-control" id="Header" value="@Model.Header" name="Header" />
		</div>

		<div class="form-group">
			<label for="Text">Text</label>
			<textarea type="text" class="form-control" id="Text" name="Text">@Model.Text</textarea>
		</div>

		<div class="form-group">
			<label for="Name">Image</label>
			<input type="file" class="form-control" id="Name" placeholder="example" name="Image" />
		</div>

		<p>Or</p>

		<div class="form-group">
			<label for="ImagePath">Image Path</label>
			<input type="text" class="form-control" id="ImagePath" name="Src" />
		</div>

		<p name="Date">@Model.Date</p>

		<input type="hidden" value="@Model.Id" name="Id" />
		<input type="hidden" value="@Model.Language" name="Language" />

		<button type="submit" class="btn btn-default">Update news</button>
	}
</div>