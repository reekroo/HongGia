@model HongGia.Core.Interfaces.Models.INewsView

@{
	ViewBag.Title = "AddNews";
}

<h2>Add News</h2>

<div>
	@using (Html.BeginForm("Add", "News", FormMethod.Post))
	{
		<div class="form-group">
			<label for="Language">Language</label>
			<select id="Language" class="form-control" name="Language">
				<option>ru</option>
				<option>en</option>
			</select>
		</div>

		<div class="form-group">
			<label for="Header">Header</label>
			<input type="text" class="form-control" id="Header" name="Header" />
		</div>

		<div class="form-group">
			<label for="Text">Text</label>
			<textarea type="text" class="form-control" id="Text" name="Text"></textarea>
		</div>

		<div class="form-group">
			<label for="NameFile">Image File</label>
			<input type="file" class="form-control" id="NameFile" placeholder="example" name="Image" />
		</div>

		<p>Or</p>

		<div class="form-group">
			<label for="ImagePath">Image Path</label>
			<input type="text" class="form-control" id="ImagePath" name="ImagePAth" />
		</div>

	<button type="submit" class="btn btn-default">Add news</button>
	}
</div>