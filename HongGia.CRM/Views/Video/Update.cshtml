@model HongGia.Core.Interfaces.Models.IVideoView

@{
	ViewBag.Title = "UpdateVideo";
}

<h2>Update Video</h2>

<div>
    @using (Html.BeginForm("Update", "Video", FormMethod.Post))
	{
		<div class="form-group">
			<img src="@Model.Screen.Src" alt="@Model.Screen.Alt"/>
		</div>

		<div class="form-group">
			<label for="Name">Name</label>
			<input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
		</div>

		if (Model != null && Model.Categories != null)
		{
			<div class="form-group">
				<label for="Categories">Catigories</label>
				<select size="5" multiple id="Categories">
					@foreach (var categories in Model.Categories)
					{
						<option>@categories</option>
					}
				</select>
			</div>

			<input type="hidden" name="Categories" id="VideoCategories" value="" />
		}

		<input type="hidden" name="Id" value="@Model.Id" />

		<button type="submit" class="btn btn-default" id="submitButton">Update Photo</button>
	}
</div>

<script>
	$('#submitButton').click(function () {
		$('#VideoCategories').val($('#Categories').val());
	});
</script>