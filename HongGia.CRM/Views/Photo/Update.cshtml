@model HongGia.Core.Interfaces.Models.IPhotoView

@{
    ViewBag.Title = "UpdatePhoto";
}

<h2>Update Photo</h2>

<div>
    @using (Html.BeginForm("Update", "Photo", FormMethod.Post))
	{
		<div class="form-group">
			<img src="@Model.Path" alt="@Model.Name" width="200" height="200"/>
		</div>

		<div class="form-group">
			<label for="Name">Name</label>
			<input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
		</div>

		if (Model != null && Model.Categories != null)
		{
			<div class="form-group">
				<label for="Categories">Catigories</label>
				<select size="5" multiple id="Categories">
					@foreach (var categories in Model.Categories)
					{
						<option>@categories</option>
					}
				</select>
			</div>

			<input type="hidden" name="Categories" id="PhotoCategories" value="" />
		}

		<input type="hidden" name="Id" value="@Model.Id" />

		<button type="submit" class="btn btn-default" id="submitButton">Update Photo</button>
	}
</div>

<script>
	$('#submitButton').click(function () {
		$('#PhotoCategories').val($('#Categories').val());
	});
</script>