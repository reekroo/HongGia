@model HongGia.Core.Interfaces.Models.IPhotoView

@{
	ViewBag.Title = "AddPhoto";
}

<h2>Add photo</h2>

<div>
	@using (Html.BeginForm("Add", "Photo", FormMethod.Post))
	{
		<div class="form-group">
			<label for="Name">Name</label>
			<input type="text" class="form-control" id="Name" name="Name" />
		</div>

		<div class="form-group">
			<label for="File">Photo</label>
			<input type="file" class="form-control" id="File" name="PhotoFile" />
		</div>

		<p>Or</p>

		<div class="form-group">
			<label for="PhotoPath">Photo Path</label>
			<input type="text" class="form-control" id="PhotoPath" name="Path" />
		</div>

		if (Model != null && Model.Categories != null)
		{
			<div class="form-group">
				<label for="Categories">Catigories</label>
				<select size="5" multiple id="Categories">
					@foreach (var categories in Model.Categories)
					{
						<option>@categories</option>
					}
				</select>
			</div>

			<input type="hidden" name="Categories" id="PhotoCategories" value="" />
		}

		<button type="submit" class="btn btn-default" id="submitButton">Add Photo</button>
	}
</div>

<script>
	$('#submitButton').click(function () {
		$('#PhotoCategories').val($('#Categories').val());
	});
</script>